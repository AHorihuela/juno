{
  "name": "dictation-tool",
  "version": "1.0.0",
  "description": "Dictation and AI-assisted writing tool",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run start:dev\" \"npm run watch\"",
    "start:dev": "cross-env NODE_ENV=development electron .",
    "watch": "cross-env NODE_ENV=development webpack --config webpack.config.js --watch",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "clean": "rimraf --glob \"dist\" \"build\" \"out\" \".webpack\" \"coverage\" \".nyc_output\"",
    "prebuild": "npm run clean",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "node scripts/test-coverage.js",
    "test:critical": "jest --config config/jest.config.js --testPathPattern=\"(WindowManager|MemoryManager|memoryIpcHandlers|ServiceRegistry)\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.9.0",
    "electron": "^28.1.4",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-squirrel-startup": "^1.0.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "rimraf": "^6.0.1",
    "spectron": "^19.0.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.0.7",
    "wav": "^1.0.2",
    "wav-encoder": "^1.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "electron-store": "^10.0.1",
    "form-data": "^4.0.2",
    "node-fetch": "^2.7.0",
    "node-record-lpcm16": "^1.0.1",
    "node-wav-player": "^1.0.0",
    "openai": "^4.85.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.2.0",
    "robotjs": "^0.6.0",
    "tone": "^15.0.4",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.dictation.tool",
    "productName": "Juno",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
